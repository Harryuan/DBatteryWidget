<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/dual_battery_widget"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	
	android:clickable="true"
	><!-- android:background="@drawable/widget" -->
	
	<ImageView
		android:id="@+id/bg_icon"
		android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_x="0dp" android:layout_y="0dp"/>

	<ImageView
		android:id="@+id/aux_battery_icon"
		android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_x="20dp" android:layout_y="20dp"/>

	<ImageView
		android:id="@+id/aux_charge_icon"
		android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_x="20dp" android:layout_y="20dp"/>

	<ImageView
		android:id="@+id/main_battery_icon"
		android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_x="20dp" android:layout_y="55dp"/>
	
	<ImageView
		android:id="@+id/main_charge_icon"
		android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_x="20dp" android:layout_y="55dp"/>
		
 	 <TextView   
		android:id="@+id/aux_battery_percent"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center" android:gravity="center" 
		 android:textColor="#ffffff" 
		 android:layout_x="90dp" android:layout_y="20dp"
		/>
	<TextView 
		android:id="@+id/main_battery_percent"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center" android:gravity="center" 
		 android:textColor="#ffffff" 
		 android:layout_x="90dp" android:layout_y="55dp"
		/>
</AbsoluteLayout>
